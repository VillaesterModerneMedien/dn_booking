<?xml version="1.0" encoding="utf-8"?>
<form>
    <config>
		<inlinehelp button="show"/>
	</config>
    
    <fieldset addfieldprefix="DnbookingNamespace\Component\Dnbooking\Administrator\Field">
        <field
			name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			readonly="true"
		/>
        
        <field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
        
        <field
			name="published"
			type="list"
			label="JSTATUS"
			default="1"
			class="form-select-color-state"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="featured"
			type="radio"
			layout="joomla.form.field.radio.switcher"
			label="JFEATURED"
			default="0"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
        <field
			name="title"
			type="text"
			label="COM_DNBOOKING_FIELD_TITLE_LABEL"
			description="COM_DNBOOKING_FIELD_TITLE_DESC"
			class="input-xxlarge"
			default=""
			required="true"
        />
        
        <field
			name="note"
			type="text"
			label="COM_DNBOOKING_FIELD_NOTE_LABEL"
			maxlength="255"
		/>
        
		<field
			name="catid"
			type="categoryedit"
			label="JCATEGORY"
			extension="com_dnbooking"
			addfieldprefix="Joomla\Component\Categories\Administrator\Field"
			required="true"
			default=""
		/>
        
        <field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId"
		/>

		<field
			name="created"
			type="calendar"
			label="COM_DNBOOKING_FIELD_CREATED_LABEL"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="readonly"
			readonly="true"
			translateformat="true"
			showtime="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
			validate="UserId"
		/>
    </fieldset>
    
    <fieldset name="reservationfieldset">
        <field
            name="content"
            type="editor"
            label="COM_DNBOOKING_FIELD_CONTENT_LABEL"
            filter="JComponentHelper::filterText"
            buttons="true"
            hide="readmore,pagebreak"
        />

        <field
            name="reservationfield1"
            type="text"
            label="COM_DNBOOKING_FIELD_RESERVATIONFIELD1_LABEL"
            description="COM_DNBOOKING_FIELD_RESERVATIONFIELD1_DESC"
            class="input-xxlarge"
            default=""
            required="true"
        />

        <field
            name="reservationfield2"
            type="radio"
            label="COM_DNBOOKING_FIELD_RESERVATIONFIELD2_LABEL"
            layout="joomla.form.field.radio.switcher"
            validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="reservationfield3"
            type="list"
            label="COM_DNBOOKING_FIELD_RESERVATIONFIELD3_LABEL"
            default="0"
            validate="options"
        >
            <option value="-1">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_SELECT</option>
            <option value="1">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_1</option>
            <option value="2">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_2</option>
            <option value="3">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_3</option>
            <option value="4">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_4</option>
        </field>
    </fieldset>
</form>
