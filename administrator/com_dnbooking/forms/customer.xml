<?xml version="1.0" encoding="utf-8"?>
<form>
    <config>
        <inlinehelp button="show"/>
    </config>

    <fieldset addfieldprefix="DnbookingNamespace\Component\Dnbooking\Administrator\Field">
        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            default="0"
            class="readonly"
            readonly="true"
        />

        <field
            name="alias"
            type="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            hint="JFIELD_ALIAS_PLACEHOLDER"
        />

        <field
            name="published"
            type="list"
            label="JSTATUS"
            default="1"
            class="form-select-color-state"
            validate="options"
            >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="created"
                type="calendar"
                label="COM_DNBOOKING_FIELD_CREATED_LABEL"
                translateformat="true"
                showtime="true"
                filter="user_utc"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                class="readonly"
                readonly="true"
                translateformat="true"
                showtime="true"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                class="readonly"
                readonly="true"
                filter="unset"
                validate="UserId"
        />
        <field
                name="title"
                type="text"
                label="COM_DNBOOKING_FIELD_TITLE_LABEL"
                description="COM_DNBOOKING_FIELD_TITLE_DESC"
                class="input-xxlarge"
                default=""
                required="false"
                readonly="true"
        />
    </fieldset>

<fieldset name="customerfieldset">
        <field
            name="firstname"
            type="text"
            label="COM_DNBOOKING_FIELD_FIRSTNAME_LABEL"
            description="COM_DNBOOKING_FIELD_FIRSTNAME_DESC"
            required="true"
        />

        <field
            name="lastname"
            type="text"
            label="COM_DNBOOKING_FIELD_LASTNAME_LABEL"
            description="COM_DNBOOKING_FIELD_LASTNAME_DESC"
            required="true"
        />

        <field
            name="email"
            type="text"
            label="COM_DNBOOKING_FIELD_EMAIL_LABEL"
            validate="email"
            description="COM_DNBOOKING_FIELD_EMAIL_DESC"
            required="true"
        />

        <field
            name="phone"
            type="text"
            label="COM_DNBOOKING_FIELD_PHONE_LABEL"
            description="COM_DNBOOKING_FIELD_PHONE_DESC"
        />

        <field
            name="address"
            type="text"
            label="COM_DNBOOKING_FIELD_ADDRESS_LABEL"
            description="COM_DNBOOKING_FIELD_ADDRESS_DESC"
        />

        <field
            name="city"
            type="text"
            label="COM_DNBOOKING_FIELD_CITY_LABEL"
            description="COM_DNBOOKING_FIELD_CITY_DESC"
        />

        <field
            name="zip"
            type="text"
            label="COM_DNBOOKING_FIELD_ZIP_LABEL"
            description="COM_DNBOOKING_FIELD_ZIP_DESC"
        />

        <field
            name="country"
            type="text"
            label="COM_DNBOOKING_FIELD_COUNTRY_LABEL"
            description="COM_DNBOOKING_FIELD_COUNTRY_DESC"
        />


    </fieldset>
</form>