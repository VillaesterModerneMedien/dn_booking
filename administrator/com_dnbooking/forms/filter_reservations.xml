<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
		name="search"
		type="text"
		hint="JSEARCH_FILTER"
		class="js-stools-search-string"
		/>
        
        <field
			name="published"
			type="status"
			label="JSTATUS"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
        
    
        <field
			name="category_id"
			type="category"
			label="JCATEGORY"
			multiple="true"
			extension="com_dnbooking"
			layout="joomla.form.field.list-fancy-select"
			hint="JOPTION_SELECT_CATEGORY"
			onchange="this.form.submit();"
			published="0,1,2"
		/>
        
        <field
			name="level"
			type="integer"
			label="JGLOBAL_MAXLEVEL_LABEL"
			first="1"
			last="10"
			step="1"
			languages="*"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_MAX_LEVELS</option>
		</field>
        
 
        <field
			name="reservationfield3"
			type="list"
			label="COM_DNBOOKING_FIELD_RESERVATIONFIELD3_LABEL"
			validate="options"
			onchange="this.form.submit();"
		>
            <option value="">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_SELECT</option>
			<option value="1">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_1</option>
			<option value="2">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_2</option>
			<option value="3">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_3</option>
			<option value="4">COM_DNBOOKING_FIELD_RESERVATIONFIELD3_VALUE_4</option>
		</field>
	</fields>
    
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>